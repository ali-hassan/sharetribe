<%
hero_style_variations = {
  "light" => "hero__section--light",
  "dark" => "hero__section--dark",
  "transparent" => "hero__section"
}

hero_style_variations.default = "hero__section--dark"

section_style_class = hero_style_variations[s["background_image_variation"]]
%>

<% content_for :hero_css do %>
  .<%= section_style_class %> {
    background-image: url('<%= s["background_image"]["src"] %>');
  }

  .hero__search-button,
  .hero__search-button:active,
  .hero__signup-button,
  .hero__signup-button:active
  {
    background-color: rgb(<%= s["search_button_color"]["value"].join(",") %>);
  }

  .hero__search-button:hover,
  .hero__search-button:focus,
  .hero__signup-button:hover,
  .hero__signup-button:focus {
    background-color: rgb(<%= s["search_button_color_hover"]["value"].join(",") %>);
  }
<% end %>
<div>
  <div class="topbar-placeholder">
    <div class="s006">
      <form>
        <fieldset>
          <div class="inner-form">
            <div class="studiotime_logo">
              <img src="landing_page/studiotime_logo.png" />
            </div>
            <div class="input-field">
              <button class="btn-search" type="button">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                  <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"></path>
                </svg>
              </button>
              <input id="search" type="text" placeholder="Try 'Los Angeles'" value="" />
            </div>
            <div class="top_navbar_text">
              <div class="vertical_align_text">+ Add your studio</div>
              <div class="vertical_align_text">Sign up</div>
              <div class="vertical_align_text">Log in</div>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>
<div class="font-family-champagne-limosine">
  <div class="hero_second-section">
    <h1 class="hero__title"><%= s["title"]["value"] %></h1>
    <div class="get_started">
      <div class="get_started-image">
        <img src="landing_page/get_started.jpg" />
      </div>
      <div class="subtitle">
        <h2 class="hero__subtitle"><span><%= s["subtitle"]["value"] %></span></h2>
        <a class="get_started_button"><span>Get started</span></a>
      </div>
    </div>
  </div>
</div>

